
<button type="button" class="own__card" data-toggle="modal" data-target=<%= "#" + "#{id}exampleModal" %> >
  <h3 class="own__name">  <%= name  %></h3>
  <h4 class="own__price">  <%= price  %></h4>
</button>

<!-- Modal -->
<div class="modal fade" id= <%= "#{id}exampleModal"%> tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
