<% t =  data.textos%>



<div class="show">
  <div class="show__background">
  </div>
  <div class="show__content show__content--divided">
    <% form_tag 'https://formcarry.com/s/IPZZAEv8L9X', :class => 'own', :method => 'POST' do %>
      <div class="show__left--divided padding-left-5" id="own-form">
        <h1 class="upcase"><%=t.crea%></h1>
        <br><br>
        <h4><%=t.entrantes  %></h4>

        <div class="row">
          <% data.own.entrantes.each do |entrante| %>
            <div class="col-xs-12 col-sm-6">
              <%= partial(:'components/own-card', :locals => {
              :id => entrante[0],
              :name => entrante[1].name,
              :price => entrante[1].price }) %>
            </div>
          <% end %>
        </div>

        <br><br>
        <h4><%=t.principales  %></h4>
        <div class="row">
          <% data.own.principales.each do |principal| %>
            <div class="col-xs-12 col-sm-6">
              <%= partial(:'components/own-card', :locals => {
              :id => principal[0],
              :name => principal[1].name,
              :price => principal[1].price }) %>
            </div>
          <% end %>
        </div>


        <br><br>
        <h4><%=t.postres  %></h4>
        <div class="row">
          <% data.own.postres.each do |postre| %>
            <div class="col-xs-12 col-sm-6">
              <%= partial(:'components/own-card', :locals => {
              :id => postre[0],
              :name => postre[1].name,
              :price => postre[1].price }) %>
            </div>
          <% end %>
        </div>


        <div class="datos hidden">
           <%= partial(:'components/datos') %>
        </div>
      </div>
      <div class="show__right--own">
        <%= partial(:'components/form-right-own')%>
      </div>
    <% end %>
  </div>
</div>



<%= javascript_include_tag "custom" %>
