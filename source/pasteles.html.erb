<% t =  data.textos%>
<section class="content">
  <div class="cards" id="menu-cards">
    <h3 class= "category-title margin-top-10"><%= t.pasteles %></h3>
    <div class="row cards__row">
      <% data.pasteles.pasteles.each do |menu| %>
        <div class="col-xs-12 col-sm-6  col-md-4">
          <li>
            <%= partial(:'components/card', :locals => {
              :title => menu.nombre,
              :precio => menu.precio,
              :image => menu.image,
              :platos => menu.platos,
              :slug => menu.slug }) %>
          </li>
         </div>
      <% end %>
    </div>

    <h3 class= "category-title"><%= t.mini_pasteles %></h3>
    <div class="row cards__row">
      <% data.pasteles.mini_pasteles.each do |menu| %>
        <div class="col-xs-12 col-sm-6  col-md-4">
          <li>
            <%= partial(:'components/card', :locals => {
              :title => menu.nombre,
              :precio => menu.precio,
              :image => menu.image,
              :platos => menu.platos,
              :slug => menu.slug }) %>
          </li>
         </div>
      <% end %>
    </div>



  </div>
</section>
